{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Warning",
      "PIYA_API": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "YOUR_CONNECTION_STRING"
  },
  "Jwt": {
    "SecretKey": "YOUR_JWT_SECRET_KEY",
    "Issuer": "PIYA_API_Production",
    "Audience": "PIYA_Clients",
    "ExpirationMinutes": "15",
    "RefreshTokenExpirationDays": "7"
  },
  "Security": {
    "RequireHttps": true,
    "EnableCors": true,
    "AllowedOrigins": ["https://piya.life"],
    "QrSigningKey": "YOUR_QR_SIGNING_KEY",
    "QrTokenExpiryMinutes": 5,
    "QrTokenCleanupDays": 30,
    "PasswordHashWorkFactor": 12,
    "MaxLoginAttempts": 3,
    "LockoutDurationMinutes": 30
  },
  "ExternalApis": {
    "AzerbaijanPharmaceuticalRegistry": {
      "BaseUrl": "https://opendata.az/api/v1",
      "Endpoint": "/medications",
      "TimeoutSeconds": 30,
      "RetryAttempts": 3,
      "CacheDurationMinutes": 1440,
      "Enabled": true
    },
    "MedicationDatabase": {
      "Provider": "Azerbaijan",
      "SyncEnabled": true,
      "SyncIntervalHours": 24,
      "LastSyncTimestamp": null
    },
    "GoogleMaps": {
      "ApiKey": "REPLACE_WITH_GOOGLE_MAPS_API_KEY",
      "Enabled": false,
      "GeocodeEndpoint": "https://maps.googleapis.com/maps/api/geocode/json",
      "DistanceMatrixEndpoint": "https://maps.googleapis.com/maps/api/distancematrix/json"
    },
    "EmailService": {
      "Provider": "SMTP",
      "SmtpHost": "smtp.production.com",
      "SmtpPort": 587,
      "SmtpUsername": "REPLACE_WITH_SMTP_USERNAME",
      "SmtpPassword": "REPLACE_WITH_SMTP_PASSWORD",
      "FromEmail": "noreply@piya.az",
      "FromName": "PIYA Healthcare",
      "EnableSsl": true,
      "Enabled": true
    },
    "SmsService": {
      "Provider": "Twilio",
      "AccountSid": "REPLACE_WITH_TWILIO_SID",
      "AuthToken": "REPLACE_WITH_TWILIO_TOKEN",
      "FromPhoneNumber": "REPLACE_WITH_PHONE_NUMBER",
      "Enabled": true
    }
  },
  "Features": {
    "EnableTwoFactorAuth": true,
    "EnableQrCodeSystem": true,
    "EnableAppointmentSystem": true,
    "EnablePrescriptionSystem": true,
    "EnableAuditLogging": true,
    "EnableRateLimiting": true,
    "EnableCaching": true
  },
  "RateLimiting": {
    "EnableGlobal": true,
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 0,
    "Endpoints": {
      "QrGeneration": {
        "PermitLimit": 5,
        "WindowSeconds": 60
      },
      "QrValidation": {
        "PermitLimit": 20,
        "WindowSeconds": 60
      },
      "Authentication": {
        "PermitLimit": 3,
        "WindowSeconds": 300
      }
    }
  },
  "Caching": {
    "Provider": "Redis",
    "RedisConnectionString": "REPLACE_WITH_REDIS_CONNECTION_STRING",
    "DefaultExpirationMinutes": 60,
    "MedicationCacheMinutes": 1440,
    "PharmacyCacheMinutes": 60
  }
}

